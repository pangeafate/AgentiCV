{
  "presets": [
    ["@babel/preset-env", { "targets": { "node": "current" } }],
    ["@babel/preset-react", { "runtime": "automatic" }]
  ],
  "plugins": [
    ["babel-plugin-transform-import-meta", { "module": "ES6" }]
  ],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", { "targets": { "node": "current" } }],
        ["@babel/preset-react", { "runtime": "automatic" }]
      ],
      "plugins": [
        ["babel-plugin-transform-import-meta", { 
          "module": "ES6",
          "templateByModule": {
            "default": "{ env: process.env }"
          }
        }]
      ]
    }
  }
}
